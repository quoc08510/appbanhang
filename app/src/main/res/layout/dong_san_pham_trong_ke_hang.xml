<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:background ="@drawable/custom_dong_all_sp"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/imageviewsptrongkho"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="7dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_toRightOf="@id/imageviewsptrongkho"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="Tên:"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:id="@+id/textviewtensptrongkho"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="Số lượng:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/textviewsoluongsptrongkho"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="Giá:"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/textviewgiasptrongkho"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <ImageButton
        android:scaleType="fitXY"
        android:id="@+id/imagebuttoneditsptrongkho"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@id/relativeLayout"
        app:srcCompat="@android:drawable/ic_input_get"
        android:background="@drawable/custom_button_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>