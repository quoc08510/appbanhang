<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#686868"
    android:orientation="vertical"
    tools:context=".activity.Login_Activity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarlogin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <EditText
        android:textColor="#FFFFFF"
        android:id="@+id/edittexttendangnhaplogin"
        android:hint="Tên đăng nhập"
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:textColorHint="#FFFFFF"
        android:layout_height="wrap_content"/>
    <EditText
        android:textColor="#FFFFFF"
        android:id="@+id/edittextmatkhaulogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="mật khẩu"
        android:textColorHint="#FFFFFF"
        android:inputType="textPassword" />
    <CheckBox
        android:textColor="#FFFFFF"
        android:layout_marginTop="7dp"
        android:id="@+id/checkboxghinhologin"
        android:text="ghi nhớ"
        android:layout_marginLeft="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="center"
                android:id="@+id/buttondangnhaplogin"
                android:text="Đăng Nhập"
                android:maxLines="1"
                android:textSize="13sp"
                android:background="@drawable/custom_button_login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Button
                android:maxLines="1"
                android:id="@+id/buttondangkylogin"
                android:layout_gravity="center"
                android:text="Đăng ký"
                android:textSize="13sp"
                android:background="@drawable/custom_button_login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>