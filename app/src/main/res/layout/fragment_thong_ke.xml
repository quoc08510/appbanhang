<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layoutdoanhthuthongke"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textviewdoanhthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="Doanh Thu"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <TextView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/textviewtienthongkedoanhthu"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="20.000.000 VND"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutchitieuthongke"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textviewchitiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="Chi Tiêu"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <TextView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/textviewchitieukedoanhthu"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="-20.000.000 VND"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:text="Các đơn hàng của bạn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:layout_margin="10dp"
        android:id="@+id/listviewdonhangthongke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>